#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp ESC    &kp Q  &kp W  &kp E  &kp R      &kp T        &kp Y      &kp U      &kp I      &kp O     &kp P     &kp MINUS
&kp TAB    &kp A  &kp S  &kp D  &kp F      &kp G        &kp H      &kp J      &kp K      &kp L     &kp SEMI  &kp SQT
&kp LSHFT  &kp Z  &kp X  &kp C  &kp V      &kp B        &kp N      &kp M      &kp COMMA  &kp DOT   &kp FSLH  &kp RSHFT
                  &kp X  &kp C                                                &kp LBKT   &kp RBKT
                                &mo 1      &kp SPACE    &kp SPACE  &mo 2
                                &kp LGUI   &kp BSPC     &kp RET    &kp RCTRL
                                &kp LCTRL  &kp LALT     &kp RALT   &kp DEL
            >;
        };

        layer_1 {
            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &trans    &trans  &kp N7  &kp N8  &kp N9  &trans   &trans
&trans      &trans        &trans        &trans        &trans        &trans    &trans  &kp N4  &kp N5  &kp N6  &trans   &trans
&trans      &trans        &trans        &trans        &trans        &trans    &trans  &kp N1  &kp N2  &kp N3  &kp RET  &trans
                          &trans        &trans                                                &kp N0  &kp N0
                                                      &trans        &trans    &trans  &trans
                                                      &trans        &trans    &trans  &trans
                                                      &bootloader   &trans    &trans  &trans
            >;
        };

        layer_2 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans       &trans    &trans  &trans     &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &kp LEFT     &kp DOWN  &kp UP  &kp RIGHT  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans       &trans    &trans  &trans     &trans
                &trans  &trans                                         &trans    &trans
                                &trans  &trans    &trans  &trans
                                &trans  &trans    &trans  &trans
                                &trans  &trans    &trans  &bootloader
            >;
        };

        layer_3 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                &trans  &trans                                    &trans  &trans
                                &trans  &trans    &trans  &trans
                                &trans  &trans    &trans  &trans
                                &trans  &trans    &trans  &trans
            >;
        };
    };
};

